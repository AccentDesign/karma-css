{
  "name": "karma-css",
  "version": "3.0.0",
  "description": "The Official Sass Version of Karma-CSS: A Simple, Responsive Boilerplate for Mobile-Friendly Development.",
  "repository": {
    "type": "git",
    "url": "https://github.com/accentdesign/karma-css"
  },
  "bugs": {
    "url": "https://github.com/accentdesign/karma-css/issues"
  },
  "homepage": "http://karmacss.com",
  "author": "Accent Design <npm@accentdesign.co.uk>",
  "keywords": [
    "karma",
    "css",
    "sass",
    "scss",
    "responsive",
    "boilerplate"
  ],
  "license": "MIT",
  "scripts": {
    "build:karma": "npm-run-all css:compile:karma css:prefix:karma css:minify:karma --silent",
    "css:compile:karma": "sass --style expanded --source-map --embed-sources --no-error-css scss/:css/",
    "css:prefix:karma": "postcss --config css --replace css/*.css !css/*.min.css",
    "css:minify:karma": "cleancss -O1 --with-rebase --source-map --source-map-inline-sources --batch --batch-suffix .min css/*.css !css/*.min.css",
    "watch:css": "nodemon --watch scss/ --ext scss --exec 'npm run build:karma'"
  },
  "devDependencies": {
    "autoprefixer": "10.4.13",
    "clean-css-cli": "5.6.2",
    "css-declaration-sorter": "6.3.1",
    "nodemon": "2.0.20",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.21",
    "postcss-cli": "10.1.0",
    "postcss-scss": "4.0.6",
    "sass": "1.57.1"
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "not ie > 0"
  ]
}
