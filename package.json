{
  "name": "start-css-boilerplate",
  "version": "1.0.0",
  "description": "The Official Sass Version of Start CSS Boilerplate: A Simple, Responsive Starting Point for Mobile-Friendly Development.",
  "repository": {
    "type": "git",
    "url": "https://github.com/benaccent/Start-CSS-Boilerplate"
  },
  "bugs": {
    "url": "https://github.com/benaccent/Start-CSS-Boilerplate/issues"
  },
  "keywords": [
    "start",
    "css",
    "sass",
    "scss",
    "responsive",
    "boilerplate"
  ],
  "license": "MIT",
  "scripts": {
    "css": "npm-run-all --parallel css-lint* css-compile* --sequential css-prefix* css-minify* fontello-dist*",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/boilerplate.scss dist/boilerplate.css",
    "css-lint": "stylelint --syntax scss \"scss/**/*.scss\"",
    "css-prefix": "postcss --config build/postcss.config.js --replace \"dist/*.css\" \"!dist/*.min.css\"",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/boilerplate.min.css dist/boilerplate.css",
    "fontello-dist": "cpy 'scss/core/iconography/font/*' dist/font",
    "fontello-install": "fontello-cli install --config scss/core/iconography/config.json --css scss/core/iconography/css --font scss/core/iconography/font",
    "fontello-web": "fontello-cli open --config scss/core/iconography/config.json",
    "watch-css": "nodemon --ignore dist/ -e scss -x \"npm run css\""
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "clean-css-cli": "^4.1.10",
    "cpy-cli": "^1.0.1",
    "fontello-cli": "^0.4.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^6.0.0",
    "postcss-discard-comments": "^2.0.4",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended-scss": "^3.0.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.3.0"
  },
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ]
}
